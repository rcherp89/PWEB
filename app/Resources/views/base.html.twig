<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
      <title>{% block title %}Welcome!{% endblock %}</title>
      {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
      {% endblock %}
  </head>
  
  <body>
		<div id="sidebar">
			{% block sidebar %}
      <ul>
        <li><a href="/home">Harfony</a></li>
        <li><a href="/shitpost">Shitpost</a></li>
        <li><a href="/musique">Musique</a></li>
        <li><a href="/images">Images</a></li>
			</ul>
      {% endblock %}
    </div>
    
    <div id="chat">
    {% block chat %}
			<p>----------------------------------chat-----------------------------------------</p>
		  {% for i in messages %}
  	    <p>{{ i.username ~ ": " ~ i.message ~ " " ~ i.time|date('d/m/Y H:i') }}</p>
      {% endfor %}
			
			{{ form_start ( form ) }}
			{{ form_widget ( form ) }}
			{{ form_end ( form ) }}

			<p>-------------------------------------------------------------------------------</p>
    {% endblock %}
    </div>

		<div id="content">
    	{% block body %}
    	<h3>lol</h3>
    	{% endblock %}
    </div>

      {% block javascripts %}{% endblock %}
  </body>
</html>
